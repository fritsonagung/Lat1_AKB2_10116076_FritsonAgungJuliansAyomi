<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true" >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="100dip" />
            <stroke
                android:width="1dip"
                android:color="#3e43e9" />
            <gradient
                android:angle="-90"
                android:startColor="#3e43e9"
                android:endColor="#482d7e"  />
        </shape>
    </item>
    <item
        android:state_focused="true">
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="100dip" />
            <stroke
                android:width="1dip"
                android:color="#8084f6" />
            <solid
                android:color="#8084f6"/>
        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle"  >
            <corners
                android:radius="100dip" />
            <stroke
                android:width="1dip"
                android:color="#8084f6" />
            <gradient
                android:angle="-90"
                android:startColor="#8084f6"
                android:endColor="#494dea" />
        </shape>
    </item>
</selector>